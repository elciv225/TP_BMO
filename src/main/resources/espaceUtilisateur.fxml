<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<!-- Interface Utilisateur Moderne - Google Inspired Theme -->
<!-- Inline padding and spacing removed from root to defer to CSS -->
<VBox fx:id="espaceUtilisateurRootPane"
      styleClass="page-container, espace-utilisateur-container"
      alignment="TOP_CENTER"
      prefHeight="700.0"
      prefWidth="900.0"
      stylesheets="@styles/main.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.EspaceUtilisateurController">

    <!-- En-tête avec message de bienvenue moderne -->
    <!-- VBox spacing will be inherited from page-container's fx-spacing or default VBox spacing if not set -->
    <VBox alignment="CENTER" spacing="10.0"> <!-- Reduced spacing for subtitle -->
        <Label fx:id="welcomeLabel"
               text="Bienvenue Utilisateur 👋"
               styleClass="main-title"/>

        <Label text="Créez ou rejoignez une réunion."
               styleClass="subtitle-text"/>
    </VBox>


    <Region prefHeight="20.0" />


    <VBox styleClass="section-box, hover-scale"
          alignment="CENTER"
          maxWidth="600.0">

        <!-- En-tête de section avec icône -->
        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <Label text="📅" styleClass="icon-large"/>
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label text="Nouvelle Réunion" styleClass="section-title"/>
                <Label text="Organisez et invitez."
                       styleClass="field-label"/>
            </VBox>
        </HBox>

        <!-- Bouton de création moderne - Sizing and font from CSS -->
        <Button fx:id="btnCreerReunion"
                text="Créer une réunion"
                styleClass="primary-button, hover-scale"
                onAction="#handleClickCreerReunion"/>

        <!-- Fonctionnalités incluses -->
        <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: -spacing-small 0 0 0;">
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="🎥" styleClass="icon-medium"/>
                <Label text="Chat intégré" styleClass="feature-text"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="👥" styleClass="icon-medium"/>
                <Label text="Invitations" styleClass="feature-text"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="🔒" styleClass="icon-medium"/>
                <Label text="Sécurisé" styleClass="feature-text"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Espacement -->
    <Region prefHeight="10.0" />

    <!-- Section Rejoindre une Réunion -->
    <VBox styleClass="section-box, hover-scale"
          alignment="CENTER"
          maxWidth="600.0">

        <!-- En-tête de section avec icône -->
        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <Label text="🚀" styleClass="icon-large"/>
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label text="Rejoindre une Réunion" styleClass="section-title"/>
                <Label text="Participez avec un ID ou nom."
                       styleClass="field-label"/>
            </VBox>
        </HBox>

        <!-- Champ de saisie moderne -->
        <VBox alignment="CENTER" spacing="10.0"> <!-- Reduced spacing -->
            <Label text="🔍 Nom ou ID de la réunion"
                   styleClass="field-label"/>

            <TextField fx:id="txtTitreReunion"
                      styleClass="modern-text-field"
                      promptText="Exemple: Réunion équipe ou 12345"
                       prefWidth="350.0"/> <!-- Adjusted width, height from CSS -->
        </VBox>

        <!-- Bouton de connexion moderne - Sizing, font, and color from CSS -->
        <Button fx:id="btnRejoindre"
                text="Rejoindre la réunion"
                styleClass="primary-button, hover-scale"
                onAction="#handleClickJoinReunion"/>

        <!-- Conseil utilisateur -->
        <HBox alignment="CENTER" spacing="8.0" style="-fx-padding: -spacing-small 0 0 0;">
            <Label text="💡" styleClass="icon-medium"/> <!-- Re-using icon-medium for consistency -->
            <Label text="Astuce: Utilisez le nom exact ou l'ID."
                   styleClass="hint-text"/>
        </HBox>
    </VBox>


    <Region VBox.vgrow="ALWAYS" />


    <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: -spacing-medium 0 0 0;">
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="🔄" styleClass="icon-medium"/>
            <Label text="Synchronisation" styleClass="info-footer-title"/>
            <Label text="Temps réel" styleClass="info-footer-subtitle"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="🌐" styleClass="icon-medium"/>
            <Label text="Multi-plateforme" styleClass="info-footer-title"/>
            <Label text="Partout" styleClass="info-footer-subtitle"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="⚡" styleClass="icon-medium"/>
            <Label text="Performance" styleClass="info-footer-title"/>
            <Label text="Optimisée" styleClass="info-footer-subtitle"/>
        </VBox>
    </HBox>

</VBox>