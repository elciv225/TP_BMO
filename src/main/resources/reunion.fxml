<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="reunionContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ReunionController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label fx:id="connectionStatus" styleClass="connectionStatus" text="État de la connexion: Non connecté" />

        <ScrollPane fitToWidth="true" prefHeight="300.0" prefWidth="580.0">
            <content>
                <VBox fx:id="messageArea" styleClass="messageArea" />
            </content>
        </ScrollPane>

        <HBox fx:id="inputArea" alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <TextField fx:id="messageInput" prefHeight="30.0" prefWidth="400.0" promptText="Tapez votre message ici..." />
                <Button fx:id="sendButton" mnemonicParsing="false" text="Envoyer" />
            </children>
        </HBox>
    </children>
</VBox>
